.banner__box .banner__text.subtitle+.banner__heading,
.banner__box>*+.banner__buttons { margin-top: 4.572rem; }
.banner__box .banner__text.subtitle { font-size: 1.372rem; color: rgb(var(--color-foreground)); line-height: 1; font-family: Jost; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; }
.banner__content--middle-left.page-width .banner__box .banner__heading { max-width: 79.6%; }
.banner__heading { text-transform: capitalize; }
.banner__box .banner__richtext.rte { margin-top: 15px; }
  .banner__box .banner__richtext.rte strong, .banner__box .banner__richtext.rte b { font-weight: 500; }
  .banner__box .banner__richtext.rte p { margin: 0.646em 0; }
  .banner__box .banner__richtext.rte p:first-child { margin-top: 0; }
  .banner__box .banner__richtext.rte p:last-child { margin-bottom: 0; }
.banner__buttons .button { font-family: Jost; font-size: 1.372rem; font-style: normal; font-weight: 500; line-height: 1; letter-spacing: 0.05em; text-transform: uppercase; min-height: calc(5.486rem + var(--buttons-border-width) * 2); }
  .banner__buttons .button .btnIcon { margin-left: 10px; }

@media screen and (min-width: 1441px){
  .banner__content--middle-left.page-width { max-width: calc(86.111% + 10rem); width: 100%; }
}
@media screen and (min-width: 750px){
  .banner__content--middle-left.page-width { max-width: calc(141.715rem + 10rem); width: 100%; }
  .banner__content--middle-left.page-width .banner__box { padding-left: 0; max-width: 56.072rem; }  
}

@media screen and (max-width: 749px){
  .banner .banner__box { text-align: left; padding: 4.572rem 1.5rem; }
  .banner--mobile-bottom:not(.banner--stacked) .banner__box:not(#id) { background: #FCF8F7; }
  .banner__box .banner__text.subtitle+.banner__heading { margin-top: 2.743rem; }
  .banner__box>*+.banner__buttons { margin-top: 3.658rem; }
}