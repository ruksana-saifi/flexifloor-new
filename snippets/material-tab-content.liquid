{% assign tag_1 = block.settings.tag_list_1 | split:',' %}
{% assign tag_2 = block.settings.tag_list_2 | split:',' %}
{% assign tag_3 = block.settings.tag_list_3 | split:',' %}
{% assign tag_4 = block.settings.tag_list_4 | split:',' %}
{% assign tag_5 = block.settings.tag_list_5 | split:',' %}

{% assign content_1 = false %}
{% assign content_2 = false %}
{% assign content_3 = false %}
{% assign content_4 = false %}
{% assign content_5 = false %}


{% for product_tag in product.tags %}
  
  {% for tag_1_tag in tag_1 %}
    {% if tag_1_tag == product_tag %}
      {% assign content_1 = true %}
      {% break %}
    {% endif %}
  {% endfor %}
  
  {% if content_1 == true %}
    {% break %}
  {% endif %}
  
{% endfor %}

{% for product_tag in product.tags %}
  
  {% for tag_2_tag in tag_2 %}
    {% if tag_2_tag == product_tag %}
      {% assign content_2 = true %}
      {% break %}
    {% endif %}
  {% endfor %}
  
  {% if content_2 == true %}
    {% break %}
  {% endif %}
  
{% endfor %}

{% for product_tag in product.tags %}
  
  {% for tag_3_tag in tag_3 %}
    {% if tag_3_tag == product_tag %}
      {% assign content_3 = true %}
      {% break %}
    {% endif %}
  {% endfor %}
  
  {% if content_3 == true %}
    {% break %}
  {% endif %}
  
{% endfor %}

{% for product_tag in product.tags %}
  
  {% for tag_4_tag in tag_4 %}
    {% if tag_4_tag == product_tag %}
      {% assign content_4 = true %}
      {% break %}
    {% endif %}
  {% endfor %}
  
  {% if content_4 == true %}
    {% break %}
  {% endif %}
  
{% endfor %}

{% for product_tag in product.tags %}
  
  {% for tag_5_tag in tag_5 %}
    {% if tag_5_tag == product_tag %}
      {% assign content_5 = true %}
      {% break %}
    {% endif %}
  {% endfor %}
  
  {% if content_5 == true %}
    {% break %}
  {% endif %}
  
{% endfor %}

{%- capture content_material -%}{% if content_1 == true %}{{ block.settings.content_1 }}{% endif %}{% if content_2 == true %}{{ block.settings.content_2 }}{% endif %}{% if content_3 == true %}{{ block.settings.content_3 }}{% endif %}{% if content_4 == true %}{{ block.settings.content_4 }}{% endif %}{% if content_5 == true %}{{ block.settings.content_5 }}{% endif %}{%- endcapture -%}

{% if content_material.size > 10 %}
<div class="product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
      <div class="accordion-item">
        <div class="accordion-title summary summary__title">
          {% render 'icon-accordion', icon: block.settings.icon %}
          <h2 class="h4 accordion__title inline-richtext">
            {{ block.settings.heading | default: block.settings.page.title }}
          </h2>
          {% render 'icon-caret' %}
        </div>
        <div class="accordion-body rte">
          {{ content_material }}
        </div>
      </div>
  </div>
  {% comment %}
<div class="product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
  <details class="accordion-item" id="Details-{{ block.id }}-{{ section.id }}">
    <summary class="accordion-title">
      <div class="summary__title">
        {% render 'icon-accordion', icon: block.settings.icon %}
        <h2 class="h4 accordion__title inline-richtext">
          {{ block.settings.heading | default: block.settings.page.title }}
        </h2>
      </div>
      {% render 'icon-caret' %}
    </summary>
    <div class="accordian_height accordion-body">
      <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
        {{ content_material }}
      </div>
    </div>
  </details>
</div>
{% endcomment %}
{% endif %}
