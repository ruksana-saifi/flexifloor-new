<style>
  .title_video_wrapper {
    padding: 150px 80px;
  }
  .title_video_wrapper:not(.right_video) .video_group {
    margin-bottom: 60px;
    display: block;
  }
  .cover-image {
    position: relative;
    height: 100%;
    display: flex;
  }
  button.play-button {
    background: none;
    border: none;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    cursor: pointer;
    height: 100px;
    width: 100px;
    margin: auto;
    padding: 0;
  }
  .video_title .main_heading {
    margin-bottom: 10px;
  }
  .video_title .cta_button {
    margin-top: 40px;
  }
  .img-mobile {
    display: none;
  }
  custom-deferred-media.video_group {
    display: block;
  }
  .video_group {
    position: relative;
  }
  .video_group[loaded="true"] .cover-image,
  .video_group iframe, .video_group video {
    visibility: hidden;
    opacity: 0;
  }
  .video_group iframe, .video_group video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    border-width: 0;
    transition: all 0.5s 0.2s ease, visibility 0.2s;
  }
  .video_group[loaded="true"] iframe, .video_group[loaded="true"] video {
    visibility: visible;
    opacity: 1;
  }
  @media screen and (min-width: 990px){
    .title_video_wrapper.right_video {
      display: flex;
      justify-content: space-between;
    }
    .title_video_wrapper.right_video > * {
      flex: 1;
    }
    .title_video_wrapper.right_video .video_title {
      max-width: 550px;
    }
    .title_video_wrapper.right_video .video_group {
      order: 1;
      max-width: 1160px;
    }
    .title_video_wrapper:not(.right_video) .video_title {
      display: flex;
      gap: 40px;
      flex-wrap: wrap;
    }
    .title_video_wrapper:not(.right_video) .video_title > * {
      flex: 1;
    }
  }
  @media screen and (max-width: 989px){
    .video_group {
      margin-bottom: 40px;
    }
    .title_video_wrapper {
      padding: 60px 20px;
    }
  }
  @media screen and (max-width: 767px){
    .img-mobile {
      display: block;
    }
    .img-desktop {
      display: none;
    }
    .play-button svg {
      height: 70px;
      width: 70px;
    }
    .video_title .cta_button {
      width: 100%;
    }
  }
</style>
