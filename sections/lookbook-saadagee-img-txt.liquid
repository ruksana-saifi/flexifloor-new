<link rel="stylesheet" href="{{ 'component-image-with-text.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'lookbook-saadagee-img-txt.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript><link rel="stylesheet" href="{{ 'component-image-with-text.css' | asset_url }}"></noscript>
<noscript><link rel="stylesheet" href="{{ 'lookbook-saadagee-img-txt.css' | asset_url }}"></noscript>


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="image-with-text image-with-text--no-overlap page-width isolate section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
      <div
        class="image-with-text__media image-with-text__media--{{ section.settings.height }} gradient color-background-1 global-media-settings {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
          {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
            (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
          {%- endcapture -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: sizes, widths: widths
          }}
        {%- else -%}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
    <div class="image-with-text__text-item {% if section.settings.small_box_size == true %}small-box-size{% endif %}  grid__item">
      <div
        id="ImageWithText--{{ section.id }}"
        class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-background-1 content-container"
      >

        {%- assign headBlockSize = section.blocks | where: 'type', 'heading' -%}
        {%- assign headRepeat = 1 -%}
        
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}

              {%- capture headBtnContent -%}
              <div class="head-btn-wrap">
                <h2
                  class="image-with-text__heading inline-richtext h2"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading }}
                </h2>
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="sim-link margin--{{ block.settings.button_top_margin }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.button_label | escape }} {% render 'right-arrow' %}
                  </a>
                {%- endif -%}
              </div>
              {%- endcapture -%}
              
              {% if headRepeat == 1 %}
                {%- assign firstLoopContent = headBtnContent -%}
              {% endif %}
          
              {%- if headBlockSize.size > 1 -%}
                {%- if headRepeat > 1 -%}
                  <div class="heading-with-btn">
                    {{ firstLoopContent }}
                    {{ headBtnContent }}
                  </div>
                {%- endif -%}
              {%- else -%}
                <div class="heading-with-btn">
                  {{ headBtnContent }}
                </div>
              {%- endif -%}

              {%- assign headRepeat = headRepeat | plus: 1 -%}

            {%- when 'caption' -%}
              <p
                class="image-with-text__text image-with-text__text--caption caption-with-letter-spacing caption-with-letter-spacing--medium"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.caption | escape }}
              </p>
        
            {%- when 'text' -%}
              <div class="image-with-text__text rte body" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
              
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>



